<header class="header">
  <div class="container-fluid">
    <div class="row">
      <h1 class="col-12 col-md-6 col-xl-4 my-4 text-center">
        <div class="container">
          <%= link_to root_path do %>
            <%= image_tag "logo.png", :size => '315x80', class:"mt-2" %>
          <% end %>  
        </div>
      </h1>
      <% unless admin_signed_in? %>
        <div class="col-12 col-md-6 col-xl-3 d-flex align-items-center justify-content-center">
          <% if user_signed_in? %>
            <p class="py-2 px-3 border text-white">ようこそ、<strong><%= current_user.name %></strong>さん！</p>
          <% end %>
        </div>
      <% end %>

      <div class="col m-4">
        <% if admin_signed_in? %>
          <div class="row text-white text-center justify-content-end header-button">
            <%= link_to 'ユーザー一覧', admin_users_path, class: "col-4 col-xl-2 btn header-btn mb-2" %>
            <%= link_to '投稿一覧', admin_posts_path, class: "col-4 col-xl-2 btn header-btn mb-2" %>
            <%= link_to 'グループ一覧', admin_groups_path, class: "col-3 col-xl-2 btn header-btn mb-2" %>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "col-3 col-xl-2 btn header-btn mb-2" %>
          </div>
        <% elsif user_signed_in? %>
          <div class="mt-2 d-flex justify-content-end text-white header-button">
            <%= link_to 'マイページ', users_my_page_path(current_user) , class: "btn header-btn" %>
            <%= link_to '投稿一覧', posts_path, class: "btn header-btn" %>
            <%= link_to '新規投稿', new_post_path, class: "btn header-btn" %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn header-btn" %>
          </div>
        <% else %>
          <div class="mt-2 d-flex justify-content-end text-white header-button">
            <%= link_to 'About', about_path, class: "btn header-btn" %>
            <%= link_to '投稿一覧', posts_path, class: "btn header-btn" %>
            <%= link_to '新規登録', new_user_registration_path, class: "btn header-btn" %>
            <%= link_to 'ログイン', new_user_session_path, class: "btn header-btn" %>
          </div>
        <% end %>
        <div class="search text-right m-2">
          <% if user_signed_in? %>
            <%= render 'public/searches/search' %>
          <% elsif admin_signed_in? %>
            <%= render 'admin/searches/search' %>
          <% end %>
        </div>
      </div>  
    </div>
  </div>
</header>