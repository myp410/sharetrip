<% if admin_signed_in? %>
<div class="search_form">
  <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :model, options_for_select([['User'],['Post'],['PostComment']]) %>
    <%= f.submit "検索", class: "btn-sm btn-secondary" %>
  <% end %>  
</div>
<% end %>
