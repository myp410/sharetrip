<table class="table table-hover mt-3 text-center">
  <thead>
    <tr>
      <th>投稿日</th>
      <th>投稿者</th>
      <th>開始日</th>
      <th><p>~</p></th>
      <th>終了日</th>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody >
    <% posts.each do |post| %>
    <tr>
      <%= link_to "", admin_post_path(post), class: "stretched-link text-dark" %>
      <td><%= post.created_at.to_s(:datetime_jp) %></td>
      <td class="align-middle">
        <div class="row">
          <%= link_to admin_user_path(post.user) ,class: "text-dark" do %>
            <div class="text-center">
              <%= image_tag post.user.get_profile_image, size: '64x36', style: "object-fit: contain;" %>
            </div>
            <div class="text-center">
              <%= post.user.name %>
            </div>
          <% end %>  
        </div>
      </td>
      <td><%= post.start_date %></td>
      <td><p>~</p></td>
      <td><%= post.finish_date %></td>
      <td>
        <%= post.title %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
