<div class="row  bg-gray ">
  <table class="table text-center">
    <tr>
      <td colspan="2"><%= image_tag post.user.get_profile_image %></td>
    </tr>
    <tr>
      <th>投稿者</th>
      <td>
        <%= link_to admin_user_path(post.user) do %>
          <%= post.user.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= post.start_date.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= post.finish_date.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= post.title %></td>
    </tr>
    <tr>
      <th>詳細</th>
      <td><%= post.body %></td>
    </tr>
    <tr>
      <th>コメント数</th>
      <td>
        <p><%= post.post_comments.count %> コメント</p>
        <p><%= link_to "コメントはこちら", admin_post_post_comments_path(post) %></p>
      </td>
    </tr>
  </table>
  
  <div class="container">
    <div class="row m-3">
      <%= link_to '削除する', admin_post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-block btn-secondary" %>
    </div>
  </div>
</div>
