<div class="container">
  <div class="row">
    <div class="col-md-5 bg-gray ">
      <h2 class="m-3 text-center">オーナー情報</h2>
      <div class="heading-line-admin "></div>
      <div class="text-center">
        <%= image_tag @owner.get_profile_image %>
      </div>
      <table class="table table-border">
        <tr>
          <th>ID</th>
          <td><%= @owner.id %></td>
        </tr>
        <tr>
          <th>アカウント名</th>
          <td><%= @owner.name %></td>
        </tr>
        <tr>
          <th>紹介文</th>
          <td><%= @owner.introduction %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @owner.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @owner.is_active %>
              <div class="text-success"><b>有効</b></div>
            <% else %>
              <div class="text-secondary"><b>退会</b></div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-md-6 offset-md-1">
      <div class="container">
        <div class="row">
          <h2 class="m-3 text-center">グループ詳細</h2>
          <div class="heading-line-admin "></div>
        </div>
        <div class="row">
          <div class="col-12">
            <table class="table mt-2">
                <tr>
                  <th>グループ名</th>
                  <td><%= @group.name %></td>
                </tr>
                <tr>
                  <th>紹介文</th>
                  <td><%= @group.introduction %></td>
                </tr>
                <tr>
                  <th>メンバー</th>
                  <td>
                    <% @group.users.each do |user| %>
                      <li style="list-style:none;"><%= user.name %></li>
                    <% end %> 
                  </td>
                </tr>
                <tr>
                  <th>グループステータス</th>
                  <td>
                    <% if @group.is_active %>
                      <div class="text-success"><b>有効</b></div>
                    <% else %>
                      <div class="text-secondary"><b>停止</b></div>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <th></th>
                  <td>
                    <%= link_to '編集', edit_admin_group_path(@group), class: "btn btn-sm btn-success" %>
                    <%= link_to '削除', admin_group_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
                  </td>
                </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
