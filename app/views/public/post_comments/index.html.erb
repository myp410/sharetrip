<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'public/posts/index_bar', post: @post, post_tags: @post_tags %>
    </div>
    <div class="col-lg-7 offset-lg-1">
      <div class="bg-orange">
        <h3 class="text-center">コメント投稿フォーム</h3>
        <div class="heading-line"></div>
        <div class="row" id="comment_error">
          <%= render 'layouts/errors', obj: @new_comment %>
        </div>
        <%= form_with model: [@post, @new_comment] ,url: post_post_comments_path, method: :post, local: false do |f| %>
        <table class="table mt-4 table-borderless">
          <tr>
            <th>コメント</th>
            <td><%= f.text_field :comment, placeholder: "コメントをここへ" ,class: "form-control", id: "comment_textarea" %></td>
          </tr>
        </table>
        <div class="row">
          <div class="col-12 text-center p-1">
            <%= f.submit "コメント投稿", class: "btn btn-success" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="container">
        <div class="row">
          <div class="col", id="comment_index">
            <%= render 'index', post_comments: @post_comments %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= paginate @post_comments %>