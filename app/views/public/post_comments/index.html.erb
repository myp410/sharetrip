<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'public/posts/index_bar', post: @post, post_tags: @post_tags %>
    </div>
    <div class="col-lg-7 offset-lg-1">
      <div class="">
        <h3 class="text-center mt-3">コメント一覧</h3>
        <div class="heading-line"></div>
        <p class="text-right m-2">
          <a class="btn btn-outline-secondary btn-sm" data-toggle="collapse" href="#postcommentform" role="button" aria-expanded="false" aria-controls="postcommentform">
            <i class="fa-solid fa-angle-down"> コメント投稿フォーム</i>
          </a>
        </p>
        <div class="collapse" id="postcommentform">
          <div class="card card-body">
            <%= form_with model: [@post, @new_comment], url: post_post_comments_path, method: :post, local: false, :html => {class:"needs-validation", :novalidate => true} do |f| %>
              <div class="row">
                <div class="form-group col-md-10 mb-0">
                  <%= f.text_field :comment, placeholder: "コメントをここへ", class: "form-control", id: "comment_textarea", required: true %>
                  <div class="invalid-feedback">
                    コメントを入力してください
                  </div>
                </div>
                <div class="form-group col-md-2 mb-0">
                  <%= f.submit "投稿", class: "btn btn-success" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        
      </div>
      <div class="container">
        <div class="row">
          <div class="col", id="comment_index">
            <%= render 'index', post_comments: @post_comments %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
