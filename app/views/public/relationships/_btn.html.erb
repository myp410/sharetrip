<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationship_path(user.id, user), method: :delete, class: options[:class].presence || "btn btn-block mb-3 btn-info" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-block mb-3 btn-success" %>
  <% end %>
<% end %>