<div class="container">
  <div class="container bg-orange">
    <div class="row">
      <h2 class="col mt-4">新規会員登録</h2>
    </div>  
    <div class="row">
      <div class="mx-auto">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless mt-4 mx-auto">
            <tr>
              <th>アカウント名</th>
              <td><%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "sample" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <th>
                パスワード
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
              </th>
              <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <th>パスワード（確認用）</th>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td></td>
              <td>
                <div class="active">
                  <%= f.submit "新規登録", class: "btn btn-success w-50 " %>
                </div>
              </td>
            </tr>
          </table>
         <% end %>
      </div>
    </div>
  </div>
  
  <div class="container bg-orange">
    <div class="row">
      <h2 class="col mt-4">すでに会員の方、ゲスト機能はこちら</h2>
    </div>
    <div class="row justify-content-center m-3">
      <%= link_to "ログイン",new_user_session_path,class: "btn btn-success" %>
    </div>
  </div>
</div>





