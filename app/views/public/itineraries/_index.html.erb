<%= link_to '全て削除する', post_itineraries_destroy_all_path(post_id: post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-secondary" %>
<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>開始時間</th>
      <th><p>~</p></th>
      <th>終了時間</th>
      <th>タイトル</th>
      <th>場所</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody >
    <% itineraries.each do |itinerary| %>
    <tr>
      <td><%= itinerary.start_time.strftime( "%H:%M" ) %></td>
      <td><p>~</p></td>
      <td><%= itinerary.finish_time.strftime( "%H:%M" ) %></td>
      <td>
        <%= link_to post_itinerary_path(itinerary.post_id, itinerary.id), class: "text-black" do %>
          <%= itinerary.title %>
        <% end %>
      </td>
      <td><%= itinerary.place %></td>
      <td><%= link_to "削除", post_itinerary_path(itinerary.post_id, itinerary.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>