<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>開始時間</th>
      <th><p>~</p></th>
      <th>終了時間</th>
      <th>タイトル</th>
      <th>場所</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody >
    <% itineraries.each do |itinerary| %>
    <tr>
      <td><%= itinerary.start_time.strftime( "%H:%M" ) %></td>
      <td><p>~</p></td>
      <td><%= itinerary.finish_time.strftime( "%H:%M" ) %></td>
      <td>
        <%= link_to post_itinerary_path(itinerary), class: "text-black" do %>
          <%= itinerary.title %>
        <% end %>
      </td>
      <td><%= itinerary.place %></td>
      <td><%= link_to "編集", edit_post_itinerary_path(itinerary) %></td>
      <td><%= link_to "削除", post_itinerary_path(itinerary), method: :destroy %></td>
    </tr>
    <% end %>
  </tbody>
</table>