<div class="container">
  <div class="row">
    <div class="col-6 m-3">
      <h2 class="m-3">オーナー</h2>
      <%= render 'public/users/info', user: @owner %>
    </div>
    <div class="col-6">
      
    </div>
  </div>
  <div class="row">
    <div class="container">
      <div class="row">
        <h2 class="m-3">グループ詳細</h2>
      </div>
      <div class="row">
        <div class="col-12">
          <table class="table">
            <thead>
              <tr>
                <th>グループ名</th>
                <th>紹介文</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @group.name %></td>
                <td><%= @group.introduction %></td>
                <% if @group.owner_id == current_user.id %>
                  <td>
                    <%= link_to '編集', edit_group_path(@group), class: "btn btn-sm btn-success" %>
                  </td>
                <% end %>  
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
