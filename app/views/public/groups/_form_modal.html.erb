<%= form_with(model: group, local: true, class:"was-validated") do |f| %>
<div class="row m-3">
  <div class="form-group">
    <%= f.label :name, "グループ名" %>
    <%= f.text_field :name, placeholder: "グループ名", class: "form-control", required: true %>
    <div class="invalid-feedback">
      グループ名を入力してください
    </div>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "紹介文" %>
    <%= f.text_field :introduction, placeholder: "紹介文", class: "form-control", required: true %>
    <div class="invalid-feedback">
      紹介文を入力してください
    </div>
  </div>
  <div class="d-grid col-2 mx-auto">
    <% if f.object.new_record? %>
      <%= f.submit "新規登録", class: " px-4 btn btn-success submit-btn" %>
    <% else %>
      <%= f.submit "変更を保存", class: " px-4 btn btn-success submit-btn" %>
    <% end %>
  </div>
</div>
<% end %>