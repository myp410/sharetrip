<!--# Button trigger modal-->
  <%= link_to "#newgroupModal",class: "btn btn-outline-secondary", data: {toggle: "modal"} do %>
    <i class="fa-solid fa-handshake"> 新しいグループを作成する</i>
  <% end %>  
  <!--# Modal-->
  <div class="modal fade" id="newgroupModal" tabindex="-1" role="dialog" aria-labelledby="newgroupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newgroupModalLabel">新規グループ作成</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'public/groups/form_modal', group: group %>
        </div>
      </div>
    </div>
  </div>