<table class="table">
  <thead>
    <tr>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group_path(group) %></td>
        <td><%= group.introduction %></td>
        <td><%= group.users.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>