<% if users.exists? %>
<table class="table">
  <thead>
    <tr>
      <th>プロフォール画像</th>
      <th>アカウント名</th>
      <th>自己紹介</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag(user.get_profile_image) %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= render "public/relationships/btn", user: user, options: { class: "follow-link" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>  
  <p class="m-5">ユーザーはいません</p>
<% end %> 

<%= paginate users %>