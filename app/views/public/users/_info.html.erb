<div class="text-center">
  <%= image_tag user.get_profile_image, class: "m-3" , style: "object-fit: cover;" %>
</div>
<table class="table table-border">
  <tr>
    <th>アカウント名</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>紹介文</th>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <th>フォロー</th>
    <td><%= link_to user.followings.count, user_followings_path(user) %></td>
  </tr>
  <tr>
    <th>フォロワー</th>
    <td><%= link_to user.followers.count, user_followers_path(user) %></td>
  </tr>
</table>

<div class='row px-4'>
  <% if current_user == user && !user.guest_user? %>
      <%= link_to users_information_edit_path, class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
  <% elsif !user.guest_user? %>
    <%= render "public/relationships/btn", user: user, options: { class: ""} %>
  <% end %>
</div>


