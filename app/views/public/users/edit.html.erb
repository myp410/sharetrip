<div class="container bg-orange mx-auto">
  <div class="row">
    <div class="col">
      <h2 class="mt-3 text-center">会員情報編集</h2>
      <div class="heading-line"></div>
      <%= render 'layouts/errors', obj: @user %>
        <div>
        <%= form_with model: @user,url: users_information_path, method: :patch do |f| %>
          <table class="table my-5 table-borderless">
            <tr>
              <th>アカウント名</th>
              <td><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <th>プロフィール画像</th>
              <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
            </tr>
            <tr>
              <th>自己紹介</th>
              <td><%= f.text_field :introduction, class: "form-control" %></td>
            </tr>
          </table>
          <div class="row text-center">
            <div class="col-12 col-md-5 p-1">
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            </div>
            <div class="col-12 col-md-5 p-1">
              <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
