<div class="container">
  <div class="row">
    <div class="col-6 m-3">
      <h2 class="m-3">プロフィール</h2>
      <%= render 'info', user: current_user %>
    </div>
    <div class="col-6">
      
    </div>
  </div>
  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col-12 text-right">
          <%= link_to new_post_path do %>
            <i class="fa-solid fa-square-plus" style="color:gray; font-size: 30px;"></i>
          <% end %>  
        </div>
      </div>
      <div class="row">
        <h2 class="m-3">投稿一覧</h2>
      </div>
      <div class="row">
        <div class="col-12">
          <%= render 'public/posts/index', posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>

