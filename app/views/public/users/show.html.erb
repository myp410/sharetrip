<div class="container">
  <div class="row d-flex">
    <div class="col m-3 bg-user">
      <% if @user == current_user %>
        <h2 class="mt-3 text-center">プロフィール</h2>
        <div class="heading-line"></div>
      <% else %>
        <h2 class="mt-3">ユーザー詳細</h2>
        <div class="heading-line"></div>
      <% end %>
      <%= render 'info', user: @user %>
    </div>
    <div class="col my-auto">
      <h3 class="text-center"><i class="fa-solid fa-plane-departure"></i>    直近の旅行</h3>
      <div class="heading-line"></div>
      <% if @closest_post.present? %>
        <div class="card justify-content-center m-4">
          <%= link_to "", post_path(@closest_post), class: "stretched-link text-dark" %>
          <div class="card-body">
            <h5 class="card-title text-center"><%= @closest_post.title %></h5>
              <div class="card-content d-flex justify-content-center">
                <div class="card-left col-4">
                  <div class="text-center">
                    <%= image_tag @closest_post.user.get_profile_image, size: '50x50', style: "object-fit: contain; border-radius: 50%;" %>
                  </div>
                  <div class="text-center">
                    <p class="small">
                      <%= @closest_post.user.name %>
                    </p>
                  </div>
                </div>
                <div class="card-right col-7 offset-1 ml-2">
                  <span class="badge text-bg-light text-dark justify-content-center"><%= @closest_post.start_date %>~<%= @closest_post.finish_date %></span>
                  <div class="d-flex justify-content-center mt-2">
                    <div>
                      <% @closest_post.tags.each do |tag| %>
                        <%= link_to search_tag_path(tag_id: tag.id), class: "badge rounded-pill text-bg-light text-dark" do%>
                          <i class="fa-solid fa-tag"></i><%= tag.name %>
                        <% end %>
                      <% end %>
                    </div>
                    <div id="favorite_buttons_<%= @closest_post.id %>" class="ml-2">
                      <%= render 'public/favorites/btn', post: @closest_post %>
                    </div>
                  </div>
                  <div>
                    <i class="fa-solid fa-clipboard"></i>  <%= @closest_post.body %>
                  </div>
                </div>
              </div>
              <div class="card-foot d-flex justify-content-center" style="height: 15px;">
                <p class="small">投稿日時:<%= @closest_post.created_at.to_s(:datetime_jp) %></p>
              </div>
          </div>
        </div>
      <% else %>
        <p>投稿はありません</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-end">

          <div class="ml-3">
            <%= link_to  new_group_path ,class: "btn btn-secondary" do %>
              <i class="fa-solid fa-handshake"> グループを作成する</i>
            <% end %>
            <%= link_to  groups_path ,class: "btn btn-secondary" do%>
              <i class="fa-solid fa-user-group"> グループ一覧</i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <h2 class="mt-3">各種一覧</h2>
        <div class="heading-line"></div>
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <% if @user == current_user %>
            <div class="tabs d-flex justify-content-between align-items-center">
              <ul class="nav nav-tabs" style="width:100%;">
                <li class="nav-item">
                  <a class="nav-link active" data-toggle="tab" href="#published">公開中</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#draft">下書き</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#unpublished">非公開</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#followers">フォロワー</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#followings">フォロー</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#likes">いいね</a>
                </li>
              </ul>
            </div>
            <div class="tab-content">
              <div id="published" class="tab-pane fade show active">
                <%= render "public/posts/index", posts: @published_posts %>
              </div>
              <div id="draft" class="tab-pane fade">
                <%= render "public/posts/index", posts: @draft_posts %>
              </div>
              <div id="unpublished" class="tab-pane fade">
                <%= render "public/posts/index", posts: @unpublished_posts %>
              </div>
              <div id="followers" class="tab-pane fade">
                <%= render "public/users/index", users: @followers %>
              </div>
              <div id="followings" class="tab-pane fade">
                <%= render "public/users/index", users: @followings %>
              </div>
              <div id="likes" class="tab-pane fade">
                <%= render "public/posts/index", posts: @like_posts %>
              </div>
            </div>
          <% else %>
            <div class="tabs d-flex justify-content-between align-items-center">
              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link active" data-toggle="tab" href="#published">公開中</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#followers">フォロワー</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#followings">フォロー</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#likes">いいね</a>
                </li>
              </ul>
            </div>
            <div class="tab-content">
              <div id="published" class="tab-pane fade show active">
                <%= render "public/posts/index", posts: @published_posts %>
              </div>
              <div id="followers" class="tab-pane fade">
                <%= render "public/users/index", users: @followers %>
              </div>
              <div id="followings" class="tab-pane fade">
                <%= render "public/users/index", users: @followings %>
              </div>
              <div id="likes" class="tab-pane fade">
                <%= render "public/posts/index", posts: @like_posts %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

