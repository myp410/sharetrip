<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, remote: true, data: {"turbolinks" => false}, class: "text-dark" do %>
      <i class="fa-solid fa-heart mr-1" aria-hidden="true" style="color: red;"></i><%= post.favorites.count %>
    <% end %>
  <% else %>  
    <%= link_to post_favorites_path(post), method: :post, remote: true, data: {"turbolinks" => false}, class: "text-dark" do %>
      <i class="fa-regular fa-heart mr-1" aria-hidden="true" ></i><%= post.favorites.count %>
    <% end %>
  <% end %>  
<% else %>
  <i class="fa-solid fa-heart mr-1" aria-hidden="true" style="color: black;"></i><%= post.favorites.count %>
<% end %>  