<div class="container">
  <div class="row">
    <div class="col">
      <% if @model == "User" %>
        <h2 class="m-3 text-center">"<%= @word %>"のユーザー検索結果</h2>
        <div class="heading-line"></div>
        <%= render 'public/users/index', users: @users %>
      <% elsif @model == "Post" %>
        <h2 class="m-3 text-center">"<%= @word %>"の投稿検索結果</h2>
        <div class="heading-line"></div>
        <%= render 'public/posts/index', posts: @posts %>
      <% elsif @model == "Itinerary" %>
        <h2 class="m-3 text-center">"<%= @word %>"の旅程検索結果</h2>
        <div class="heading-line"></div>
        <%= render 'public/itineraries/index', itineraries: @itineraries %>
      <% else %>
        <h2 class="m-3 text-center">"<%= @word %>"のタグ</h2>
        <div class="heading-line"></div>
        <div class="row">
          <div class="col">
            <table class="table">
              <% @tags.each do |tag| %>
                <tr class="text-center">
                  <th>タグ名</th>
                  <td><%= tag.name %></td>
                  <td>
                    <%= link_to search_tag_path(tag_id: tag.id), class: "text-dark" do %>
                      <i class="fa-solid fa-link"></i> 投稿一覧
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        <%= paginate @tags , theme: 'bootstrap-5'%>
      <% end %>
    </div>
  </div>
</div>