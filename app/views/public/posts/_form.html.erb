<%= form_with model: post, local: true do |f| %>
  <div class="row m-3">
    <table class="table table-borderless mx-auto">
      <tr class="form-group">
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title, placeholder: "タイトル", size: "30", class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <th><%= f.label :body, "詳細" %></th>
        <td><%= f.text_field :body, placeholder: "詳細", size: "30", class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <th><%= f.label :start_date, "開始日" %></th>
        <td><%= f.date_field :start_date, class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <th><%= f.label :finish_date, "終了日" %></th>
        <td><%= f.date_field :finish_date, class: "form-control" %></td>
      </tr>
    </table>
  </div>
  <div class="d-grid col-2 mx-auto">
    <% if f.object.new_record? %>
      <%= f.submit "新規登録", class: "py-2 px-4 btn btn-success submit-btn" %>
    <% else %>
      <%= f.submit "変更を保存", class: "py-2 px-4 btn btn-success submit-btn" %>
    <% end %>
  </div>
<% end %>