<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>投稿日時</th>
      <th>投稿者</th>
      <th>開始日</th>
      <th><p>~</p></th>
      <th>終了日</th>
      <th>タイトル</th>
      <th width="35%">詳細</th>
    </tr>
  </thead>
  <tbody >
    <% posts.each do |post| %>
    <tr>
      <td><%= post.created_at.to_s(:datetime_jp) %></td>
      <td class="align-middle">
        <div class="row">
          <div class="text-center">
            <%= image_tag post.user.get_profile_image, size: '64x36', style: "object-fit: contain;" %>
          </div>
          <div class="text-center">
            <%= post.user.name %>
          </div>
        </div>
      </td>
      <td><%= post.start_date %></td>
      <td><p>~</p></td>
      <td><%= post.finish_date %></td>
      <td>
        <%= link_to post_path(post), class: "text-black" do %>
          <%= post.title %>
        <% end %>
      </td>
      <td width="35%"><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>