<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>開始日</th>
      <th><p>~</p></th>
      <th>終了日</th>
      <th>タイトル</th>
      <th width="45%">詳細</th>
    </tr>
  </thead>
  <tbody >
    <% posts.each do |post| %>
    <tr>
      <td><%= post.start_date %></td>
      <td><p>~</p></td>
      <td><%= post.finish_date %></td>
      <td>
        <%= link_to post_path(post), class: "text-black" do %>
          <%= post.title %>
        <% end %>
      </td>
      <td width="45%"><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>