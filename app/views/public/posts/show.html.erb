<div class="container">
  <div class="row m-3">
    <h2>投稿詳細</h2>
  </div>
  <div class="row">
    <div class="col-4">
      <%= render 'index_bar', post: @post ,tags: @tags , post_tags: @post_tags%>
    </div>
    <div class="col-7 offset-1">
      <div class="row">
        <% if @post.user == current_user %>
          <%= render 'layouts/errors', obj: @itinerary %>
          <%= render 'public/itineraries/form', post: @post, itinerary: @itinerary, duration: @duration %>
        <% else %>
        <% end %>
      </div>
      <div class="row mt-3 flex-column">
        <% if @itineraries.present? %>
          <div class="row m-3 d-flex">
            <% if @post.user == current_user %>
              <div class="col">
                <%= link_to '全て削除する', post_itineraries_destroy_all_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-secondary" %>
              </div>
              <div class="col">
                <%= link_to '持ち物一覧', post_items_path(@post) %>
              </div>
            <% end %>
            <div class="col d-flex">
              <%= form_tag({ controller: "posts", action: "show" }, method: :get) do %>
                <div class="d-flex">
                  <%= select_tag :search_day, options_for_select(1..@duration, include_blank: "日程選択"), class: 'custom-select', style: 'width: 100px;' %>
                  <%= submit_tag "絞り込み", class: 'ml-2' %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="row">
            <% if params[:search_day].present? %>
              <% @search.first(1).each do |s| %>
                <span>絞り込み：<%= s.what_day %>日目</span>
                <%= render 'public/itineraries/imdex', post: @post, itineraries: @search %>
              <% end %>
            <% else %>
              <%= render 'public/itineraries/imdex', post: @post, itineraries: @itineraries %>
            <% end %>
          </div>
        <% else %>
          <div class="col justift-content-center">
            <p>旅程がありません</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
