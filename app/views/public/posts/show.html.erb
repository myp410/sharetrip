<div class="container">
  <div class="row m-3">
    <h2>投稿詳細</h2>
  </div>
  <div class="row">
    <div class="col-4">
      <%= render 'index_bar', post: @post %>
    </div>
    <div class="col-7 offset-1">
      <div class="row">
        <% if @post.user == current_user %>
          <%= render 'layouts/errors', obj: @itinerary %>
          <%= render 'public/itineraries/form', post: @post, itinerary: @itinerary %>
        <% else %>
        <% end %>
      </div>
      <div class="row mt-3">
        <% if @itineraries.present? %>
          <div class="row m-3">
            <% if post.user == current_user %>
              <%= link_to '全て削除する', post_itineraries_destroy_all_path(post_id: post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-secondary" %>
            <% end %>
          </div>
          <%= render 'public/itineraries/index', post: @post, itineraries: @itineraries %>
        <% else %>
          <div class="col justift-content-center">
            <p>旅程がありません</p>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>
