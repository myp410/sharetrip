<div class="container">
  <div class="row m-3">
    <h2>投稿詳細</h2>
  </div>
  <div class="row">
    <div class="col-4">
      <%= render 'index_bar', post: @post ,tags: @tags , post_tags: @post_tags%>
    </div>
    <div class="col-7 offset-1">
      <div class="row">
        <% if @post.user == current_user %>
          <%= render 'layouts/errors', obj: @itinerary %>
          <%= render 'public/itineraries/form', post: @post, itinerary: @itinerary, duration: @duration %>
        <% else %>
        <% end %>
      </div>
      <div class="row mt-3">
        <% if @itineraries.present? %>
          <div class="row m-3 d-flex">
            <% if @post.user == current_user %>
              <%= link_to '全て削除する', post_itineraries_destroy_all_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-secondary" %>
            <% end %>
            <%= form_tag({controller:"posts",action: "show"}, method: :get) do %>
              <%= select_tag :search_day, options_for_select(1..@duration), {include_blank: "日程選択"}, class: 'custom-select' %>
              <%= submit_tag "絞り込み" %>
            <% end %>
          </div>
          <% @search.each do |s| %>
            <p><%= s.what_day %>日目</p>
            <%= render 'public/itineraries/index', post: @post, itineraries: @itineraries %>
          <% end %>  
        <% else %>
          <div class="col justift-content-center">
            <p>旅程がありません</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
