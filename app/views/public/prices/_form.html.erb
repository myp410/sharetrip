<p class="text-right m-2">
  <a class="btn btn-outline-secondary btn-sm" data-toggle="collapse" href="#priceform" role="button" aria-expanded="false" aria-controls="priceform">
    <i class="fa-solid fa-angle-down"> 費用追加フォーム</i>
  </a>
</p>
<div class="collapse" id="priceform">
  <div class="card card-body">
    <%= form_with(model: [post, itinerary, price], url: post_itinerary_prices_path(post_id: post.id, itinerary_id: itinerary.id) , local: false, class: "was-validated") do |f| %>
      <div class="row">
        <table class="table table-borderless mx-auto">
          <tr class="form-group mb-0">
            <th class="text-center"><%= f.label :price, "費用" %></th>
            <td>
              <%= f.text_field :price, placeholder: "費用", class: "form-control", id: "price_price_textarea",required: true %>
              <div class="invalid-feedback">
                費用を入力してください
              </div>
            </td>
          </tr>
          <tr class="form-group mb-0">
            <th class="text-center"><%= f.label :body, "内容" %></th>
            <td>
              <%= f.text_field :body, placeholder: "内容", class: "form-control", id: "price_body_textarea",required: true %>
              <div class="invalid-feedback">
                内容を入力してください
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div class="d-grid col-2 mx-auto">
        <%= f.hidden_field :itinerary_id, value: itinerary.id %>
        <%= f.submit "新規登録", class: "py-2 px-4 btn btn-success submit-btn" %>
      </div>
    <% end %>
  </div>
</div>


